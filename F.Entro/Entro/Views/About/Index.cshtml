@model About
@{
    ViewData["Title"] = "Index";
}

<div class="backgro_mh">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="heding">
                    <h2>About</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- about  -->
<div id="about" class="about">
    <div class="container">
        <div class="row display_boxflex">
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                <div class="about-box">
                    <h2>@Model.Title</h2>
                    <p>@Model.Content</p>
                    <a href="Javascript:void(0)">Read More</a>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                <div class="about-box">
                    <figure><img src="images/@Model.AboutImage" alt="#" /></figure>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- end abouts -->
